<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/orange_crayola"
                android:endColor="@color/maroon"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>
    <item
        android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/maroon" />
            <stroke
                android:width="1dp"
                android:color="@color/charcoal" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>


</selector>
